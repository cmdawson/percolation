# boost-build C:/boost_1_54_0/tools/build/v2 ; 
import os ;
use-project /boost : /usr/local/src/boost_1_54_0 ;

project percolation
	: requirements
	<include>C:/boost_1_54_0 
	<warnings>all
	: default-build release
	;

lib graph
	:
	src/graph.cpp
	src/unitcell.cpp
	:
	<cxxflags>-Wno-unused-local-typedefs
	<cxxflags>-std=c++11
	;

lib unittest : : <name>boost_unit_test_framework ;
	
exe sandbox 
	:
	tests/sandbox.cpp
	graph
	#unittest
	:
	<include>./src
	<cxxflags>-Wno-unused-local-typedefs
	<cxxflags>-std=c++11
	<link>static
	;
	
install convenient-copy :
	#graph
	sandbox
	:
	<location>tests ; 
